<form style="padding: 20px;" name="formplanet" method="POST" action="/addplanet">
    <h3 style="text-align: left;">Add new planet</h3>
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" ></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><input type="text" name="origin" ></td>
        </tr>
        <tr>
            <td>Icon</td>
            <td><input type="text" name="icon" ></td>
        </tr>
        <tr>
            <td colspan="2"><input style="margin-top: 10px;" type="submit" value="Save" ></td>
        </tr>
    </table>
</form>

