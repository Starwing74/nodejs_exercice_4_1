<div class="X">
<h1>My Planets</h1>


<ul class="SG">
    <% for (const planet of data) { %>
    <li class="sgLi">
        <div class="box">
            <div class="box"><div></div></div>
            <h3><%- planet.name -%></h3>
            <ul class="df">
                <li><%- planet.color -%></li>
